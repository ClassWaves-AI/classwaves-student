# =============================================================================
# ClassWaves Student Portal Environment Configuration
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# Created: Phase 1 Stabilization - Environment Standardization

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NEXT_PUBLIC_APP_NAME=ClassWaves Student Portal
NEXT_PUBLIC_APP_VERSION=1.0.0

# Environment
NODE_ENV=development

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Backend API endpoints  
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:3000

# =============================================================================
# STUDENT-SPECIFIC CONFIGURATION
# =============================================================================
# Student portal specific settings
NEXT_PUBLIC_STUDENT_SESSION_TIMEOUT=3600000
NEXT_PUBLIC_STUDENT_AUDIO_ENABLED=true
NEXT_PUBLIC_STUDENT_GROUP_SIZE_LIMIT=6

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Student portal features
NEXT_PUBLIC_ENABLE_DEBUG=false
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_GROUP_CHAT=true
NEXT_PUBLIC_ENABLE_AUDIO_CONTROLS=true

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
# Student authentication (email-based, no OAuth required)
NEXT_PUBLIC_AUTH_TYPE=email
NEXT_PUBLIC_AUTH_TIMEOUT_MS=300000
