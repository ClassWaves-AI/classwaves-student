{
  "name": "classwaves-student",
  "version": "0.1.0",
  "private": true,
  "description": "ClassWaves Student PWA for audio collection and session participation",
  "scripts": {
    "dev": "next dev -p 3003",
    "build": "next build",
    "start": "next start -p 3003",
    "lint": "next lint",
    "test": "jest --passWithNoTests",
    "test:ci": "jest --ci --runInBand",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "health:check": "curl -f http://localhost:3003/api/health || exit 1",
    "health:wait": "node -e \"const http=require('http');const url=process.env.E2E_STUDENT_URL||'http://localhost:3003';const path='/api/health';const deadline=Date.now()+180000;function ping(){http.get(url+path,(res)=>{if(res.statusCode===200){console.log('Student app ready');process.exit(0);}res.resume();retry();}).on('error',retry);}function retry(){if(Date.now()>deadline){console.error('Student app not ready in time');process.exit(1);}setTimeout(ping,1000);}ping();\""
  },
  "dependencies": {
    "axios": "^1.6.0",
    "clsx": "^2.0.0",
    "lucide-react": "^0.292.0",
    "next": "^14.0.0",
    "next-pwa": "^5.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io-client": "^4.7.0",
    "tailwind-merge": "^2.0.0",
    "workbox-window": "^7.0.0",
    "zod": "^3.22.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "eslint-plugin-import": "^2.29.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "postcss": "^8.4.31",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.4.0",
    "ts-jest": "^29.4.1",
    "typescript": "^5.3.0"
  }
}
